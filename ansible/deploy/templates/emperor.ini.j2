[uwsgi]
emperor         = /etc/uwsgi/vassals
#chdir           = /home/<username>/<project>/<project>
chdir           = {{ project_path }}/{{ project_name }}
module          = wsgi
# wsgi-file       = /home/<username>/<project>/<project>/wsgi.py  # alternative to 'module'
# home            = /home/<username>/<project>
home            = {{ project_path }}

master          = true
processes       = 6
enable-threads  = true
thunder-lock    = true
socket          = /run/uwsgi/{{ project_name }}.sock
chmod-socket    = 666
vacuum          = true
harakiri        = 30
max-requests    = 5000
disable-logging = true
memory-report   = true
stats           = /tmp/uwsgistats.sock
post-buffering  = 4096
auto-procname   = true
procname-prefix-spaced = BV
#daemonize       = /var/log/nginx/{{ project_name }}_uwsgi.log
pidfile         = /tmp/uwsgi.pid
touch-reload    = /tmp/uwsgi.touch

env             = DJANGO_SETTINGS_MODULE={{ project_name }}.settings.production
env             = PYTHONPATH={{ project_path }}:{{ virtualenv_path }}/lib/python3.5:{{ virtualenv_path }}/lib/python3.5/site-packages:
env             = PYTHONHASHSEED=random
